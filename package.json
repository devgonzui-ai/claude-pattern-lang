{
  "name": "claude-pattern-lang",
  "version": "1.0.0",
  "description": "CLI tool for automatically extracting and cataloging patterns from Claude Code session logs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cpl": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devgonzui-ai/claude-pattern-lang.git"
  },
  "bugs": {
    "url": "https://github.com/devgonzui-ai/claude-pattern-lang/issues"
  },
  "homepage": "https://github.com/devgonzui-ai/claude-pattern-lang#readme",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:e2e:watch": "vitest --config vitest.config.e2e.ts",
    "test:all": "vitest run && vitest run --config vitest.config.e2e.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "pattern-language",
    "llm",
    "ai",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates",
    "prompts"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/genai": "^1.0.0",
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "ollama": "^0.5.0",
    "openai": "^4.0.0",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^17.0.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
